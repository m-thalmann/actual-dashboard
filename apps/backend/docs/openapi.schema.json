{
  "openapi": "3.0.3",
  "info": {
    "title": "Unofficial Actual Dashboard API",
    "version": "1.0"
  },
  "servers": [{ "url": "http://localhost:3000" }],
  "tags": [{ "name": "General" }, { "name": "Account" }, { "name": "Transaction" }],
  "paths": {
    "/general/reload": {
      "get": {
        "summary": "Reloads the Actual database",
        "tags": ["General"],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },

    "/accounts": {
      "get": {
        "summary": "Get all accounts",
        "tags": ["Account"],
        "responses": {
          "200": {
            "description": "List of accounts",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Account"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/accounts/{id}/balance": {
      "get": {
        "summary": "Get account balance",
        "tags": ["Account"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "200": {
            "description": "Account balance",
            "content": {
              "application/json": {
                "schema": {
                  "type": "number",
                  "description": "Account balance in cents. Null if account does not exist",
                  "example": 12345,
                  "nullable": true
                }
              }
            }
          }
        }
      }
    },

    "/accounts/{id}/transactions": {
      "get": {
        "summary": "Get account transactions",
        "tags": ["Transaction"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          },
          {
            "name": "page",
            "in": "query",
            "schema": { "type": "integer", "minimum": 1, "default": 1 },
            "description": "Page number"
          },
          {
            "name": "page-size",
            "in": "query",
            "schema": { "type": "integer", "minimum": 1, "default": 20 },
            "description": "Number of transactions per page"
          }
        ],
        "responses": {
          "200": {
            "description": "List of transactions",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Transaction"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Account": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Unique identifier",
            "example": "ca83bf55-ac0a-4bcd-965e-ed6632d2ce7f"
          },
          "name": { "type": "string", "description": "Account name", "example": "My Bank Account" },
          "amount": { "type": "number", "description": "Account balance in cents", "example": 12345 }
        },
        "required": ["id", "name", "amount"]
      },

      "Transaction": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Unique identifier",
            "example": "ca83bf55-ac0a-4bcd-965e-ed6632d2ce7f"
          },
          "date": { "type": "string", "format": "date", "description": "Transaction date", "example": "2021-12-25" },
          "amount": { "type": "number", "description": "Transaction amount in cents", "example": 12345 },
          "notes": {
            "type": "string",
            "description": "Transaction description",
            "example": "Payment",
            "nullable": true
          },
          "payee": { "type": "string", "description": "Transaction payee", "example": "John Doe" },
          "category": { "type": "string", "description": "Transaction category", "example": "Food", "nullable": true }
        },
        "required": ["id", "date", "amount", "notes", "payee", "category"]
      }
    }
  }
}
